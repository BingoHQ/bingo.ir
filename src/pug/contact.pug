                div(class='col col--md-6')
                    label   ایمیل
                    input(type='text')
                div(class='col col--md-6')
                    label   شماره موبایل
                    input(type='text')
                div(class='col col--md-6')
                    label   عنوان پیام
                    input(type='text')
                div(class='col col--md-12')
